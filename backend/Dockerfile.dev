FROM node:20-alpine

# Install OpenSSL and required libraries for Prisma
RUN apk add --no-cache openssl openssl-dev libc6-compat

WORKDIR /app

# Install dependencies first (this layer will be cached)
COPY package*.json ./
RUN npm install

# Copy prisma schema
COPY prisma ./prisma/

# Generate Prisma Client
RUN npm run prisma:generate

# Copy and make start-dev.sh executable
COPY start-dev.sh /app/start-dev.sh
RUN chmod +x /app/start-dev.sh

# Install tsx for seed script
RUN npm install -g tsx

# Expose port
EXPOSE 3000

# The source code will be mounted as a volume in docker-compose
# Start in development mode with migrations and seed
CMD ["/app/start-dev.sh"]

